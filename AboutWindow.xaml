<Window x:Class="DebloatWindows10.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebloatWindows10"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="About" Height="150" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock TextAlignment="Center" FontWeight="Bold">Debloat Windows 10</TextBlock>
            <TextBlock TextAlignment="Center" x:Name="versionTextBlock"></TextBlock>
            <TextBlock Margin="0 10 0 0">Created by: Jakub Sieradzki |
                <Hyperlink NavigateUri="http://github.com/jakub-sieradzki" RequestNavigate="Hyperlink_RequestNavigate">
                    GitHub
                </Hyperlink></TextBlock>
        </StackPanel>
    </Grid>
</Window>
